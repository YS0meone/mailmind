# ================================
# Environment Configuration for MailMind API (Example)
# ================================

# Application Settings
DEBUG=false

# Aurinko API Configuration
AURINKO_CLIENT_ID=your_aurinko_client_id
AURINKO_CLIENT_SECRET=your_aurinko_client_secret
AURINKO_BASE_URL=https://api.aurinko.io/v1
AURINKO_SYNC_DAYS_WITHIN=3

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Database Configuration (Example: Neon PostgreSQL)
DATABASE_URL=postgresql+asyncpg://username:password@host/dbname?ssl=require
DATABASE_POOL_SIZE=10
DATABASE_POOL_TIMEOUT=30
DATABASE_MAX_OVERFLOW=20

# Secret Keys
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=90

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/0
SYNC_LOCK_TTL_SECONDS=3600

# HTTP Settings
HTTP_CONNECT_TIMEOUT=10.0
HTTP_READ_TIMEOUT=60.0
HTTP_WRITE_TIMEOUT=10.0
HTTP_POOL_TIMEOUT=60.0
HTTP_MAX_CONNECTIONS=100
HTTP_MAX_KEEPALIVE_CONNECTIONS=20

# Aurinko Webhook
AURINKO_SIGNING_SECRET=your_aurinko_signing_secret
AURINKO_NOTIFICATION_URL=https://yourdomain.com/webhooks/aurinko
